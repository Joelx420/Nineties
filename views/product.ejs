<body>

    <div class="header">
    <div class="container">
        <div class="navbar">
            <div class="logo">
                <a href="/"><img src="../images/Unbenannt-3.png" width="125px" /></a>
              </div>
            <nav>
                <ul id="MenuItems">
                    <li><a href="/">Home</a></li>
                    <li><a href="categories">Shop</a></li>
                    <li><a href="aboutus">About Us</a></li>
                    <li><a href="contact">Contact</a></li>
                    <li><a href="support">Support</a></li>
                  </ul>
            </nav>
            <div class="cartimg">
            <img src="../images/Cart.png" width="30px" height="30px">
        </div>
        <div onclick="menutoggle()" class="burger">
            <div class="line1"></div>
            <div class="line2"></div>
            <div class="line3"></div>
          </div>
        </div>
    </div>  
</div>

<!---- single product details ----->

<div class="small-container single-product">
    <div class="row">
        <div class="col-2">
            <img src="../<%= product.image %>" width="100%" id="ProductImg">

            <div class="small-img-row">
                <% product.smallimages.forEach(image => { %>
                    <div class="small-img-col">
                        <img src="../<%= image %>" width="100%" class="small-img">
                    </div>
                <% }) %>
            </div>



        </div>
        <div class="col-2">
            <p>Products / <%= product.category %></p>
            <h1><%= product.name %></h1>
            <h4><%= product.price %></h4>
            <select>
                <option>Select Size</option>
                <option>XL</option>
                <option>L</option>
                <option>M</option>
                <option>S</option>
            </select>
            <input type="number" value="1">
            <a href="" class="btn">Add To Cart</a>

            <h3>Product Details <i class="fa fa-indent"></i></h3>
            <br>
            <p><%= product.description %></p>
        </div>
    </div>
</div>

<div class="small-container">
    <div class="row row-2">
        <h2>Related Products</h2>
        <p>View More</p>
    </div>
</div>



